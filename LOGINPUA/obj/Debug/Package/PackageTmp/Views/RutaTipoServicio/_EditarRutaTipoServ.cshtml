<div class="modal fade" id="EditarRutaTipoServ">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h6 class="modal-title" id="tituloDialog">Registro Tipo de servicio</h6>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body" style="width:310px;font-weight:100;">
                <div class="row">
                    <div class="col-md-12" style="display: none">
                        <input id="idRutaTipoServicio" type="text" class="form-control" style="display:none" />
                    </div>
                    <div class="col-md-12">
                        <label><strong>Tipo de Servicio</strong></label>
                        <select class="form-control" id="selectTipoServicioEditar"></select>
                    </div>

                    <div class="col-md-12">
                        <label><strong>Tipo de Servicio Operacional</strong></label>
                        <select class="form-control" id="selectTipoServicioOperacionalEditar"></select>
                    </div>

                    <div class="col-md-12">
                        <label><strong>Nombre</strong></label>
                        <input id="txtNombreRutaTipoServicioEditar" style="width:100% !important" type="text" class="form-control" />
                    </div>

                    

                    <div class="col-md-12">
                        <label><strong>Color</strong></label>
                        <input id="txtcolorEditar" data-jscolor="" style="width:100% !important" type="text" class="form-control" />
                    </div> 
                       
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button id="btnEditaRutaTipoServicio" onclick="editarRutaTipoServicio()" class="btn btn-info" type="button">
                    Guardar
                </button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {

    });

    function editarRutaTipoServicio() {

        var idrutatiposervicio = $('#idRutaTipoServicio').val();

   

       
        
        $.ajax({
            url: URL_EDITAR_RUTA_TIPO_SERV,
            dataType: 'json',
            data: {
                idRutaTipoServ: $('#idRutaTipoServicio').val(),
                idTipoServicio: $('#selectTipoServicioEditar').val(),
                idTipoServicioOper: $('#selectTipoServicioOperacionalEditar').val(),
                nombre: $('#txtNombreRutaTipoServicioEditar').val(),
                color: $('#txtcolorEditar').val()
            },
            success: function (result) {
                //
                Swal.fire({
                    type: result.COD_ESTADO == 1 ? 'success' : 'error',
                    title: result.DES_ESTADO,
                    showConfirmButton: false,
                    timer: 2000
                });
                //
                if (result.COD_ESTADO == 1) {
                    $('#EditarRutaTipoServ').modal('hide');
                    getTipoServicioByRuta();
                }
            }
        }, JSON);
    }


</script>