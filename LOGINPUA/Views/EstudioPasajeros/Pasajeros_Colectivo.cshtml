<script src="~/Content/js/js_estudio_pasajeros/js_PasajerosCampo.js"></script>
<div class="modal-body">
    <div class="row">
        <div style="width: 34%;margin-left: 14px;">
            <label for="select-native-1" style="margin-right: -3px;">Corredor: </label>
            <select id="selectCorredores" class="form-control" name="ID_CORREDOR" onchange="getRutaPorCorredor();"></select>
        </div>
        <div style="width: 29%;margin-left: 10px;">
            <label for="select-native-1">Ruta :</label>
            <select id="selectRuta" class="form-control" name="ID_RUTA" onchange="getRecorridoXRuta();"></select>
        </div>
        <div style="width: 24%;margin-left: 10px;">
            <label for="select-native-1"> Lado:</label>
            <select id="selectLado" class="form-control" onchange="getListaParadero();"></select>
        </div>
    </div>



    <div class="row">
        <div style="width: 50%;margin-left: 14px;">
            <label for="select-native-1" style="margin-right: -3px;">Paradero: </label>
            <select class="form-control" id="selectParadero"></select>
        </div>
        <div style="width: 39.5%;margin-left: 10px;">
            <label for="select-native-1">Tipo de Vehiculo: </label>
            <select id="selectTipovehiculo" class="form-control" data-native-menu="false">
                <option value="Auto">Auto</option>
                <option value="Miniband">Miniband</option>
            </select>
        </div>
    </div>



    <div class="row">
        <div style="width: 29%;margin-left: 14px;">
            <label for="select-native-1" style="margin-right: -3px;">Suben:</label>
            <input id="txt_suben" class="form-control" type="number" data-clear-btn="false" value="">
        </div>
        <div style="width: 29%;margin-left: 10px;">
            <label for="select-native-1">Bajan:</label>
            <input id="txt_bajan" class="form-control" type="number" data-clear-btn="false" value="">
        </div>
        <div style="width: 29%;margin-left: 10px;">
            <label for="select-native-1">Placa:</label>
            <input id="txt_placa" class="form-control" type="text" data-clear-btn="false" value="">
        </div>
    </div>


    <div class="row">
        <div style="width: 97%;margin-left: 14px; margin-top:12px">
            <button class="btn btn-info" type="button" style="width:98%" id="reg_pasaj_colec_btn" onclick="registrar_pasajeros_colectivo();">Registrar</button>
        </div>
    </div>
</div>

   
