
<div class="modal fade" id="modal_agregar_inf_corr">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="width:600px;margin-left:200px;">
            <div class="modal-header">
                <h6 class="modal-title" id="tituloDialog">Registro Informe-Correlativo</h6>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>

                </button>

            </div>
            <form id="sectionParametrosAgregarInfCorr" autocomplete="off">
                <div class="modal-body" style="padding-left: 45px; padding-right: 0px;">
                    <div class="control-group">
                        <div class="form-group row">
                            <div class="form-group  col-md-6">
                                <label>Número Informe</label>
                                <div>
                                    <input id="ult_corr" style="display:unset;width:80%" type="text" class="form-control" disabled>
                                </div>
                            </div>

                            <div class="form-group  col-md-6">
                                <label>Persona Responsable</label>
                                <div class="">
                                    <input name="PERS_RESP" id="txt_pers_dirig" style="display:unset;width:80%" type="text" class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>



                    <div class="control-group">
                        <div class="form-group row">

                            <div class="form-group  col-md-6">
                                <label>Persona Dirigida</label>
                                <div>
                                    <input name="PERS_DIRIG" class="form-control" id="txt_pers_dirig" style="display:unset;width:80% ">

                                </div>
                            </div>

                            <div class="form-group  col-md-6">
                                <label>Referencia</label>
                                <div>
                                    <input name="REFERENCIA" id="txt_referencia" style="display:unset;width:80%" type="text" class="form-control">
                                </div>

                            </div>

                        </div>
                    </div>

                    <div class="control-group">
                        <div class="form-group row">

                            <div class="form-group col-md-6">

                                <label>Asunto</label>
                                <div class="">
                                    <textarea onkeyup="textAreaAdjust(this)"  name="ASUNTO" id="txt_asunto" style="display:unset;width:80%;" type="text" class="form-control"></textarea>
                                </div>

                            </div>


                            <div class="form-group  col-md-6">
                                <label>Archivador</label>
                                <div>
                                    <input  name="ARCHIVADOR" id="txt_archivador" style="display:unset;width:80%" type="text" class="form-control">
                                </div>
                            </div>


                        </div>
                    </div>


                </div>



                <div class="modal-footer">
                    <button id="registrar_infcorr_btn" class="btn btn-info" type="submit">Guardar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>

    </div>
</div>