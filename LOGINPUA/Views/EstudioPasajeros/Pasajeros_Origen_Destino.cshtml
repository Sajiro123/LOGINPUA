            <select class="form-control" id="selectParaderoDestino"></select>
        </div>

    </div>


    <div class="row">
        <div style="width: 45%;margin-left: 14px;">
            <label for="select-native-1"> Tipo de Tarjeta: </label>
            <select class="form-control" name="select-native-1" id="selectTarjeta">
                <option value="1">General</option>
                <option value="2">Estudiante</option>
                <option value="3">Pase Libre</option>
            </select>
        </div>
    </div>




    <div class="row">
        <div style="width: 97%;margin-left: 14px; margin-top:12px">
            <button class="btn btn-info" type="button" style="width:98%" id="reg_pasaj_ori_des_btn" onclick="registrar_pasajeros_orig_dest();">Registrar</button>
        </div>
    </div>

</div>
