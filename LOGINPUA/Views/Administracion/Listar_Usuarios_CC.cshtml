@model IEnumerable<ENTIDADES.TB_USUARIO>

@{
    Layout = null;
}


<div ng-app="myApp" ng-controller="AdministradorController">

    <div class="row" >




        <div class="col-md-3">
            <div>
                <select name="empresa" aria-label="ngSelected demo" class="browser-default custom-select" ng-model="empresas">
                    <option selected="selected" disabled> Please choose one </option>
                    <option value="1" >HACOM</option>
                    <option value="2">ABEXA</option>
                </select>
            </div>
        
     

        
        <br /><br />
            <input type="button" name="name" value="Buscar" ng-click="FiltrarEmpresa()" class="btn btn-success" />

        </div><br /><br />

        <div class="table-responsive text-center">
            <br /><br /> <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>USUARIO</th>
                        <th>USUARIO EMPRESA</th>
                        <th>CONTRASEÑA</th>
                        <th>USUARIO REGISTRO</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="x in datas">
                        <td>{{$index+1}}</td>
                        <td>{{ x.LOGUSU }}</td>
                        <td>{{ x.USUNOM }}</td>
                        <td>{{ x.USUMCONT }}</td>
                        <td>{{ x.USUREG }}</td>
                    </tr>
                </tbody>
            </table>

        </div>





    </div>

</div>










