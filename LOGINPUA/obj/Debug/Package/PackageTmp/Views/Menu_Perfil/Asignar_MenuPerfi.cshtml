<style>
    .alertify-notifier .ajs-message.ajs-success {
        color: white;
        font-size:17px
    }

    .alertify-notifier .ajs-message.ajs-error {
            color: white;
        font-size:17px
    }

    input {
        margin-left: 13px;
    }

 

    .modal-dialog {
        max-width: max-content !important;
    }

    .modal-content input {
        width: 17px;
    }

    .sombraContenedor {
        background-color: white;
        box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
    }

   

    .thead-azul-claro th {
        color: white;
        background-color: #2f6f9dd9;
        border-color: #777;
    }

    .dropdown-item {
        color: black !important;
    }
    .accion_li {
     cursor:pointer;
    }

    .tree li {
        list-style-type: none;
        margin: 0;
        padding: 10px 5px 0 5px;
        position: relative;
    }

        .tree li::before,
        .tree li::after {
            content: '';
            left: -20px;
            position: absolute;
            right: auto;
        }

        .tree li::before {
            border-left: 2px solid #000;
            bottom: 50px;
            height: 100%;
            top: 0;
            width: 1px;
        }

        .tree li::after {
            border-top: 2px solid #000;
            height: 20px;
            top: 25px;
            width: 25px;
        }

        .tree li span {
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
            border: 2px solid #000;
            border-radius: 3px;
            display: inline-block;
            padding: 3px 8px;
            text-decoration: none;
            cursor: pointer;
        }

    .tree > ul > li::before,
    .tree > ul > li::after {
        border: 0;
    }

    .tree li:last-child::before {
        height: 27px;
    }

    .tree li span:hover {
        background: #00a39c;
         border: 2px solid #94a0b4;
    }


    
    .tree ul li a{
        color : black;
    }

    [aria-expanded="false"] > .expanded,
    [aria-expanded="true"] > .collapsed {
        display: none;
    }
</style>

